@model Assignment_1.Models.EquipmentRequest

@{
    ViewData["Title"] = "Equipment Request Form";
}
<div>
    <h2>Equipment Request Form</h2>
    <form asp-action="RequestForm" method="post">
        <div class="form-group mb-2">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="row mb-2">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Role"></label>
                    <select asp-for="Role" class="form-control">
                        <option value="Student">Student</option>
                        <option value="Professor">Professor</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Equipment"></label>
                    <select asp-for="Equipment" class="form-control" asp-items="Html.GetEnumSelectList<Assignment_1.Models.EquipmentType>()">
                        <option value="">Please select the equipment type</option>
                    </select>
                    <span asp-validation-for="Equipment" class="text-danger"></span>
                </div>
            </div>
        </div>
        

        <div class="form-group mb-2">
            <label asp-for="RequestDetails">Request Details</label>
            <textarea asp-for="RequestDetails" class="form-control"></textarea>
            <span asp-validation-for="RequestDetails" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Duration">Duration (in days)</label>
            <div class="input-group mb-3">
                <input asp-for="Duration" class="form-control" aria-describedby="basic-addon2" />
                <span class="input-group-text" id="basic-addon2">days</span>
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
        </div>
        

        <button type="submit" class="btn btn-primary">Submit Request</button>
    </form>
</div>

