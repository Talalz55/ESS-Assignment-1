@model IEnumerable<Assignment_1.Models.Equipment>

@{
    ViewData["Title"] = "Available Equipment Listing";
}

<div>
    <h2>Available Equipment Listing</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Equipment ID</th>
                <th>Type</th>
                <th>Description</th>
                <th>Availability</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var equipment in Model)
            {
                <tr class="table-success">
                    <td>@equipment.Id</td>
                    <td>@equipment.Type</td>
                    <td>@equipment.Description</td>
                    <td>@(equipment.IsAvailable ? "Available" : "Not Available")</td>
                </tr>
            }
        </tbody>
    </table>
</div>